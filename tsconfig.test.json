{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "declaration": false,
      "lib": ["esnext", "dom"],
      "module": "es6",
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es3",
      "jsx": "react",
      "strict": true
    },
    "include": [
      "**/*.spec.ts"
    ],
    "exclude": [
      "spec",
      "node_modules",
      "vendor",
      "public"
    ],
    "compileOnSave": true
  }
  
